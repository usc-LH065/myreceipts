<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_receipt_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Receipt Title"/>

    <TextView
        android:id="@+id/list_item_receipt_shop_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        tools:text="Shop Name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />
    <TextView
        android:id="@+id/list_item_receipt_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_receipt_title_text_view"
        android:padding="4dp"
        tools:text="Receipt Date"/>

</RelativeLayout>